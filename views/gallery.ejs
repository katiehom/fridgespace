<%- include('partials/header') -%>
<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl py-6 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-semibold tracking-tight text-violet-900">Gallery</h1>
  </div>
</header>
  <div class="container max-w-6xl">
    <div class="mt-10 mx-auto">
      <ul class="list-none flex flex-row flex-wrap gap-10 mx-auto justify-center content-center">
        <% for(var i=0; i<exhibits.length; i++) {%>
          <li class="bg-primary-content rounded-lg flex justify-center w-72">
            <a href="/exhibit/<%= exhibits[i]._id%>" class="text-center self-center flex">
              <img src="<%= exhibits[i].image%>" class="max-h-64 mx-auto p-8">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>
